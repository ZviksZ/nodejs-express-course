<h1>Cart</h1>
<div id="cart">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                 <tr>
                     <td>{{title}}</td>
                     <td>{{count}}</td>
                     <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">DELETE</button>
                     </td>
                 </tr>
             {{/each}}
        </tbody>
    </table>

    <p>
        <strong>
            Price: <span class="price">{{price}}</span>
        </strong>
    </p>

    <form action="/orders" method="POST">
        <input name="_csrf" type="hidden" value="{{csrf}}">
        <button class="btn" type="submit">Add order</button>
    </form>

{{else}}
<p>Cart is empty</p>
{{/if}}
</div>
